---
import Layout from "~/layouts/Layout.astro"
import Intro from "~/components/Intro.astro"

const title = "Subscribe to our newsletter"
---

<Layout title={title}>
  <Intro title={title}>
    <p slot="description">
      We send out a newsletter every month with the latest news and updates from our community.
      Subscribe to stay in the loop. No spam, we promise.
    </p>
  </Intro>

  <div class="ml-embedded" data-form="aDLsgl"></div>
</Layout>

<style is:inline>
  .ml-form-embedBody,
  .ml-form-successBody {
    padding: 0 !important;
  }
</style>

