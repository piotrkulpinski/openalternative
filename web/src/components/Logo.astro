---
import { Image } from "astro:assets"
import { listVariants } from "~/styles"

type Props = {
  loading?: "lazy" | "eager"
}

const { loading = "eager" } = Astro.props
---

<a href="/" class:list={["font-semibold leading-tight", listVariants()]}>
  <Image src="/logo.svg" alt="Logo" height="100" width="97" loading={loading} class="h-6 w-auto" />
  <slot />
</a>
