generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Sponsoring {
  id          String   @id @default(cuid())
  email       String
  name        String
  description String?
  website     String
  faviconUrl  String?
  startsAt    DateTime
  endsAt      DateTime
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model Tool {
  id             String    @id @default(cuid())
  name           String
  slug           String    @unique
  website        String    @unique
  repository     String    @unique
  tagline        String?
  description    String?
  content        String?
  links          Json?
  stars          Int       @default(0)
  forks          Int       @default(0)
  score          Int       @default(0)
  bump           Int?
  faviconUrl     String?
  screenshotUrl  String?
  isFeatured     Boolean   @default(false)
  submitterName  String?
  submitterEmail String?
  lastCommitDate DateTime?
  publishedAt    DateTime?
  updatedAt      DateTime  @updatedAt
  createdAt      DateTime  @default(now())

  // Relations
  licenseId    String?
  license      License?            @relation(fields: [licenseId], references: [id])
  alternatives AlternativeToTool[]
  categories   CategoryToTools[]
  languages    LanguageToTool[]
  topics       TopicToTool[]

  @@index([id, slug])
}

model Alternative {
  id          String              @id @default(cuid())
  name        String
  slug        String              @unique
  description String?
  website     String              @unique
  faviconUrl  String?
  updatedAt   DateTime            @updatedAt
  createdAt   DateTime            @default(now())
  tools       AlternativeToTool[]
}

model Category {
  id        String            @id @default(cuid())
  name      String
  slug      String            @unique
  label     String?
  updatedAt DateTime          @updatedAt
  createdAt DateTime          @default(now())
  tools     CategoryToTools[]
}

model Language {
  slug      String           @id @unique
  name      String
  color     String?
  updatedAt DateTime         @updatedAt
  createdAt DateTime         @default(now())
  tools     LanguageToTool[]
}

model Topic {
  slug      String        @id @unique
  updatedAt DateTime      @updatedAt
  createdAt DateTime      @default(now())
  tools     TopicToTool[]
}

model License {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  content     String?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
  tools       Tool[]
}

model AlternativeToTool {
  toolId        String
  alternativeId String
  tool          Tool        @relation(fields: [toolId], references: [id])
  alternative   Alternative @relation(fields: [alternativeId], references: [id])

  @@id([toolId, alternativeId])
}

model CategoryToTools {
  toolId     String
  categoryId String
  tool       Tool     @relation(fields: [toolId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])

  @@id([toolId, categoryId])
}

model LanguageToTool {
  toolId       String
  languageSlug String
  percentage   Float?
  tool         Tool     @relation(fields: [toolId], references: [id])
  language     Language @relation(fields: [languageSlug], references: [slug])

  @@id([toolId, languageSlug])
}

model TopicToTool {
  toolId    String
  topicSlug String
  tool      Tool   @relation(fields: [toolId], references: [id])
  topic     Topic  @relation(fields: [topicSlug], references: [slug])

  @@id([toolId, topicSlug])
}
