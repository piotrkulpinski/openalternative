generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Tool {
  id             Int              @id @default(autoincrement())
  name           String
  slug           String           @unique
  website        String?
  repository     String?
  description    String?
  stars          Int @default(0)
  forks          Int @default(0)
  license        String?
  score          Int @default(0)
  bump           Int?
  faviconUrl     String?
  screenshotUrl  String?
  isDraft        Boolean          @default(false)
  isFeatured     Boolean          @default(false)
  lastCommitDate DateTime?
  updatedAt DateTime @updatedAt
  createdAt      DateTime         @default(now())
  alternatives   Alternative[]
  categories       Category[]
  languages       Language[]
  topics          Topic[]
}

model Alternative {
  id          Int              @id @default(autoincrement())
  description String?
  name        String
  slug        String          @unique
  website     String?
  tools       Tool[]
}

model Category {
  id    Int             @id @default(autoincrement())
  name  String
  slug  String        @unique
  tools Tool[]
}

model Language {
  id    Int             @id @default(autoincrement())
  name  String
  slug  String       @unique
  tools Tool[]
}

model Topic {
  id    Int             @id @default(autoincrement())
  name  String
  slug  String      @unique
  tools Tool[]
}
