{
  "trailingSlash": false,
  "redirects": [
    {
      "source": "/tool/:path*",
      "destination": "/:path*"
    },
    {
      "source": "/alternatives-to/:path*",
      "destination": "/alternatives/:path*"
    },
    {
      "source": "/category/:path*",
      "destination": "/categories/:path*"
    },
    {
      "source": "/language/:path*",
      "destination": "/languages/:path*"
    },
    {
      "source": "/topic/:path*",
      "destination": "/topics/:path*"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 0 * * *"
    }
  ]
}
