{
  "version": "2.0.0",
  "presentation": {
    "clear": true,
    "echo": false,
    "focus": true,
    "panel": "new",
    "reveal": "silent",
    "showReuseMessage": true
  },
  "tasks": [
    {
      "type": "shell",
      "label": "dev",
      "command": "bun dev",
      "isBackground": true,
      "dependsOrder": "sequence",
      "options": {
        "cwd": "${workspaceFolder}/web/"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "shell",
      "label": "codegen",
      "command": "bun codegen:watch",
      "isBackground": true,
      "dependsOrder": "sequence",
      "options": {
        "cwd": "${workspaceFolder}/web/"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "shell",
      "label": "worker-github: run",
      "command": "npx wrangler dev --test-scheduled",
      "isBackground": false,
      "options": {
        "cwd": "${workspaceFolder}/workers/github/"
      },
    },
    {
      "type": "shell",
      "label": "worker-github: trigger",
      "command": "curl 'http://localhost:8787/__scheduled?cron=*+*+*+*+*'",
      "isBackground": false,
      "options": {
        "cwd": "${workspaceFolder}/workers/github/"
      },
    }
  ]
}
