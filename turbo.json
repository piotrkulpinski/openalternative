{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "VERCEL_URL",
    "NEXT_PUBLIC_SITE_URL",
    "AUTH_SECRET",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET",
    "DATABASE_URL",
    "DIRECT_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^db:generate"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**", "public/build/**"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}
